{
  "name": "sendingemails-microservice",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "ts-node index.ts",
    "dev": "node --watch --no-warnings -r ts-node/register index.ts",
    "test": "jest",
    "migration:run": "ts-node -r ts-node/register node_modules/typeorm/cli.js migration:run -d config/database.ts",
    "migration:revert": "ts-node -r ts-node/register node_modules/typeorm/cli.js migration:revert -d config/database.ts",
    "migration:generate": "ts-node -r ts-node/register node_modules/typeorm/cli.js migration:generate -d config/database.ts",
    "migration:create": "ts-node -r ts-node/register node_modules/typeorm/cli.js migration:create"
  },
  "dependencies": {
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "nodemailer": "^6.9.16",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.28",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.10.2",
    "@types/nodemailer": "^6.4.17",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.7",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  }
}
